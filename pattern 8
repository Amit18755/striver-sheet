class Solution{
public:
	
	void printTriangle(int n) {
	    // code here
	    int i, j, k;
	    for( i=n; i>=1; i--){
	        for(k=0; k<n-i; k++){
	            cout<<" ";
	        }
	    for( j=i; j<=2*i-1; j++){
	        cout<<"*";
	    }
	    for( j=0; j<i-1; j++){
	        cout<<"*";
	    }cout<<"\n";
	    } 
	}
};
